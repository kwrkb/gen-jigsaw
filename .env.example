# Database connection string (Prisma)
# Default: SQLite file in the prisma directory
DATABASE_URL="file:./dev.db"

# Image generation provider: "mock" (copies placeholder) or "dalle2" (OpenAI DALL-E 2)
IMAGE_GEN_PROVIDER="mock"

# OpenAI API key (required when IMAGE_GEN_PROVIDER="dalle2")
OPENAI_API_KEY=""

# Session encryption secret for iron-session (must be at least 32 characters)
SESSION_SECRET="replace-with-at-least-32-characters"

# Storage provider: "local" (filesystem) â€” S3/R2 support planned
STORAGE_PROVIDER="local"
